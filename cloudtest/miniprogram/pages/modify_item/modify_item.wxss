.image_all_frame{
  display: flex;
  width: 100%;
  height: 45%;
  flex-direction: column;
  align-items: center;
 
}
.image_text_frame{
  display: flex;
  flex-direction: row;
  width: 60%;
}
.image_text{
  display: flex;
  color: #181818;
  margin: 10rpx;
  width: 100%;
}
.image_clear{
  display: flex;
  justify-content: flex-end;
  color: #0b0475;
  margin: 10rpx;
  width: 100%;
}
.content_image_frame_outer{
  width: 60%;
  box-shadow: 0 0 2rpx rgba(0, 0, 0, 0.5);
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.content_image_frame_inner{
  display: flex;
  box-shadow: 0 0 2rpx rgba(0, 0, 0, 0.5);
  width: 40%;
  margin: 18rpx;
}
.content_image{
  width: 100%;
  height: 100%;
}
.content_image_icon_frame{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.content_image_icon{
  width: 50%;
  height: 50%;
}

.button_frame{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 15%;
}
.button_2.button{
  background-color: rgb(162, 197, 236);
  color: #fff;
  border-radius: 60rpx;
}
.button_2{
  background-color: rgba(162, 196, 236, 0.247);
  border-radius: 60rpx;
}