page{
  display:flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:100%;
}
.item_correct_frame{
  display:flex;
  flex-direction: column;
  width: 95%;
  height:90%;
  border-radius: 30rpx;
  background-color: rgba(195, 228, 236, 0.295) ;
}
.item_correct_title{ 
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 50rpx;
  padding-bottom: 20rpx; 
  height: 10%;
}
.text_title{
  font-weight: bolder;
  font-size: 50rpx;
  color: rgb(8, 68, 146);
}
.item_detail{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 5%;
  height:30%;
}
.row{
  display:flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
  margin: 10rpx 0;
  width:100%;
}
.label{
  width:28%;
  font-weight: bold
}
#price,phone{
  margin-top:20rpx; 
}
.input{
  box-shadow: 0 2rpx rgba(238, 116, 116, 0.123);
  width:40%;
}
.picker{
  display:flex;
  flex-direction:row;
}
.picker_arrow{
  width: 50rpx;
  height: 50rpx;
  justify-content: center;         
  align-items:center;
  padding-left: 30rpx;
}
